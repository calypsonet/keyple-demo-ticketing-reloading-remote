<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.calypsonet.keyple.demo.reload.remote">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required for nfc plugin-->
    <uses-permission android:name="android.permission.NFC" />

    <!-- Required for wizway agent -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!-- Required for Open Mobile API -->
    <uses-permission android:name="org.simalliance.openmobileapi.SMARTCARD" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:name="org.calypsonet.keyple.demo.reload.remote.Application">

        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.SettingsMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.ServerSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.ConfigurationSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.CardReaderActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.CardSummaryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.SelectTicketsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.CheckoutActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.PaymentValidatedActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.ChargeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.ChargeResultActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="org.calypsonet.keyple.demo.reload.remote.ui.activity.PersonnalizationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>

</manifest>
