<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tickets_block_space"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <TextView
        android:id="@+id/choose_tickets_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_trips"
        style="@style/buy_text_info_regular"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <LinearLayout
        android:id="@+id/ticket1Btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ticket_btn"
        android:backgroundTint="@color/light_blue"
        android:elevation="@dimen/select_ticket_elevation"
        android:layout_marginEnd="@dimen/tickets_block_space"
        android:layout_marginTop="@dimen/tickets_block_space"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ticket2Btn"
        app:layout_constraintTop_toBottomOf="@id/choose_tickets_tv"
        android:gravity="center">

        <TextView
            android:id="@+id/ticket1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_bold"/>

        <TextView
            android:id="@+id/ticket1Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_reg_small"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket2Btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ticket_btn"
        android:backgroundTint="@color/light_blue"
        android:elevation="@dimen/select_ticket_elevation"
        android:layout_marginTop="@dimen/tickets_block_space"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintLeft_toRightOf="@id/ticket1Btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_tickets_tv"
        android:gravity="center">

        <TextView
            android:id="@+id/ticket2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_bold"/>

        <TextView
            android:id="@+id/ticket2Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_reg_small"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket3Btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ticket_btn"
        android:backgroundTint="@color/light_blue"
        android:elevation="@dimen/select_ticket_elevation"
        android:layout_marginEnd="@dimen/tickets_block_space"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ticket4Btn"
        app:layout_constraintTop_toBottomOf="@id/ticket1Btn"
        android:layout_marginTop="@dimen/tickets_block_space"
        android:gravity="center">

        <TextView
            android:id="@+id/ticket3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_bold"/>

        <TextView
            android:id="@+id/ticket3Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_reg_small"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket4Btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ticket_btn"
        android:backgroundTint="@color/light_blue"
        android:elevation="@dimen/select_ticket_elevation"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintLeft_toRightOf="@id/ticket3Btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ticket2Btn"
        android:layout_marginTop="@dimen/tickets_block_space"
        android:gravity="center">

        <TextView
            android:id="@+id/ticket4Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_bold"/>

        <TextView
            android:id="@+id/ticket4Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buy_text_info_reg_small"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>