<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_anim_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_fileName="cardscan_anim.json"
        app:lottie_autoPlay="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline_anim_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintBottom_toTopOf="@id/presentTxt"/>

    <TextView
        android:id="@+id/presentTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/present_travel_card_label"
        android:gravity="center"
        android:fontFamily="@font/worksans_bold"
        android:textColor="@color/blue"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/loadingAnimation"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <Button
        android:id="@+id/caseEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/caseInvalid"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom"/>

    <Button
        android:id="@+id/caseInvalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_invalid"
        app:layout_constraintStart_toEndOf="@id/caseEmpty"
        app:layout_constraintEnd_toStartOf="@id/caseValid"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom" />

    <Button
        android:id="@+id/caseValid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_with_tickets"
        app:layout_constraintStart_toEndOf="@id/caseInvalid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_keyple"
        android:layout_marginBottom="20dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left_logo"
        app:layout_constraintRight_toRightOf="@id/guideline_right_logo"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>