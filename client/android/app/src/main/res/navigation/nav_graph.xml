<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/selectDeviceFragment">

    <fragment
        android:id="@+id/cardReaderFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.CardReaderFragment"
        tools:layout="@layout/fragment_card_reader" >
        <action
            android:id="@+id/action_cardReaderFragment_to_cardSummaryFragment"
            app:destination="@id/cardSummaryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/cardSummaryFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.CardSummaryFragment"
        tools:layout="@layout/fragment_card_summary">
        <action
            android:id="@+id/action_cardSummaryFragment_to_selectTicketsFragment"
            app:destination="@id/selectTicketsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="ticket_number"
            app:argType="integer" />
        <argument
            android:name="card_type"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="last_validation"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="season_pass_expiry_date"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/selectTicketsFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.SelectTicketsFragment"
        tools:layout="@layout/fragment_select_tickets" >
        <action
            android:id="@+id/action_go_checkout"
            app:destination="@id/checkoutFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" >
            <argument
                android:name="ticket_number"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.CheckoutFragment"
        tools:layout="@layout/fragment_checkout" >
        <argument
            android:name="ticket_number"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_checkoutFragment_to_paymentValidatedFragment"
            app:destination="@id/paymentValidatedFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="ticket_number"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/paymentValidatedFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.PaymentValidatedFragment"
        tools:layout="@layout/fragment_payment_validated" >
        <argument
            android:name="ticket_number"
            android:defaultValue="0"
            app:argType="integer"/>
        <action
            android:id="@+id/action_paymentValidatedFragment_to_chargeCardFragment"
            app:destination="@id/chargeCardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="ticket_number"
                android:defaultValue="0" />
        </action>
        <action
            android:id="@+id/action_paymentValidatedFragment_to_chargeDeviceFragment"
            app:destination="@id/chargeDeviceFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="ticket_number"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/chargeCardFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.ChargeCardFragment"
        tools:layout="@layout/fragment_charge_card" >
        <argument
            android:name="ticket_number"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_chargeCardFragment_to_chargeResultFragment"
            app:destination="@+id/chargeResultFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/chargeDeviceFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.ChargeDeviceFragment"
        tools:layout="@layout/fragment_charge_device">
        <argument
            android:name="ticket_number"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_chargeDeviceFragment_to_chargeResultFragment"
            app:destination="@+id/chargeResultFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <action
        android:id="@+id/action_nav_graph_pop"
        app:popUpTo="@id/selectDeviceFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/chargeResultFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.ChargeResultFragment"
        tools:layout="@layout/fragment_charge_result" >
        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="ticket_number"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.MenuFragment"
        tools:layout="@layout/fragment_menu" />
    <action android:id="@+id/action_menu" app:destination="@id/menuFragment"
        app:enterAnim="@anim/nav_default_enter_anim" app:launchSingleTop="true" app:exitAnim="@anim/nav_default_exit_anim" app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    <fragment
        android:id="@+id/selectDeviceFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.SelectDeviceFragment"
        tools:layout="@layout/fragment_select_device">
        <action
            android:id="@+id/action_selectDeviceFragment_to_cardReaderFragment"
            app:destination="@id/cardReaderFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_selectDeviceFragment_to_deviceStatusFragment"
            app:destination="@id/DeviceStatusFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/DeviceStatusFragment"
        android:name="org.cna.keyple.demo.sale.android.nfc.slave.ui.fragments.DeviceStatusFragment"
        tools:layout="@layout/fragment_device_status">
        <action
            android:id="@+id/action_deviceStatusFragment_to_cardSummaryFragment"
            app:destination="@id/cardSummaryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/selectDeviceFragment" />
    </fragment>
</navigation>