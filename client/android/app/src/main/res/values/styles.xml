<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Bottom_Btn">
        <item name="android:background">@color/green</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingLeft">42dp</item>
        <item name="android:paddingRight">42dp</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:fontFamily">@font/worksans_extrabold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Menu_Btn_green" parent="Bottom_Btn">
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Menu_Btn_blue" parent="Menu_Btn_green">
        <item name="android:background">@color/deep_blue</item>
    </style>

    <style name="buy_text_info_regular">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="buy_text_info_medium">
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="buy_text_info_bold">
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="buy_text_info_reg_small">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/splash_test_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="buy_text_info_reg_small_cc">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/splash_test_size</item>
        <item name="android:textColor">@color/line_blue</item>
    </style>
</resources>
